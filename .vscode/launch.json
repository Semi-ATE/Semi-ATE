    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Aktuelle Datei",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Debug Spyder",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/../spyder/bootstrap.py",
            "console": "integratedTerminal",
        },
        {
            "name": "Debug Tests",
            "type": "python",
            "request": "test",
            "program": "${file}",
            "console": "integratedTerminal",
        },
        {
            "name": "master",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/Apps/master_app/ate_master_app/launch_master.py",
            "cwd": "${workspaceFolder}/master-control",
            "console": "integratedTerminal",
        },
        {
            "name": "control",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/Apps/control_app/ate_control_app/launch_control.py",
            "cwd": "${workspaceFolder}/master-control",
            "console": "integratedTerminal",
        }
    ]
}